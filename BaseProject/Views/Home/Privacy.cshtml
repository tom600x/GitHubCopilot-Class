@{
    ViewData["Title"] = "Privacy Policy";
}

<section class="privacy-hero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="privacy-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <h1 class="privacy-title">Privacy Policy</h1>
                <p class="privacy-subtitle">Your privacy and data security are our highest priorities</p>
            </div>
        </div>
    </div>
</section>

<section class="privacy-content">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Demo Notice -->
                <div class="info-card">
                    <div class="info-icon">
                        <i class="bi bi-info-circle"></i>
                    </div>
                    <div class="info-content">
                        <h3>Demo Application Notice</h3>
                        <p>This is a demonstration application designed for learning GitHub Copilot features. No personal data is collected, stored, or transmitted.</p>
                    </div>
                </div>

                <!-- Privacy Sections -->
                <div class="privacy-sections">
                    <div class="privacy-section">
                        <div class="section-icon">
                            <i class="bi bi-eye"></i>
                        </div>
                        <div class="section-content">
                            <h3>Data Collection</h3>
                            <p>This demonstration application operates entirely locally and does not collect any personal information, usage data, or tracking information. It serves purely as an educational tool for exploring GitHub Copilot capabilities.</p>
                            <div class="privacy-highlights">
                                <div class="highlight-item">
                                    <i class="bi bi-check-circle"></i>
                                    <span>No personal data collection</span>
                                </div>
                                <div class="highlight-item">
                                    <i class="bi bi-check-circle"></i>
                                    <span>No cookies or tracking</span>
                                </div>
                                <div class="highlight-item">
                                    <i class="bi bi-check-circle"></i>
                                    <span>No external data transmission</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="privacy-section">
                        <div class="section-icon">
                            <i class="bi bi-shield-lock"></i>
                        </div>
                        <div class="section-content">
                            <h3>Security & Storage</h3>
                            <p>Since no data is collected or transmitted, there are no security concerns related to data storage or third-party access. The application runs entirely within your local environment.</p>
                        </div>
                    </div>

                    <div class="privacy-section">
                        <div class="section-icon">
                            <i class="bi bi-github"></i>
                        </div>
                        <div class="section-content">
                            <h3>GitHub Copilot Integration</h3>
                            <p>This application showcases GitHub Copilot features. For information about GitHub Copilot's data handling and privacy practices, please refer to the official documentation.</p>
                            <a href="https://docs.github.com/en/copilot/overview-of-github-copilot/about-github-copilot-for-individuals" 
                               target="_blank" class="modern-link">
                                <i class="bi bi-box-arrow-up-right"></i>
                                GitHub Copilot Privacy Policy
                            </a>
                        </div>
                    </div>

                    <div class="privacy-section">
                        <div class="section-icon">
                            <i class="bi bi-telephone"></i>
                        </div>
                        <div class="section-content">
                            <h3>Contact & Support</h3>
                            <p>If you have questions about this demonstration application or GitHub Copilot features, please consult the official GitHub documentation or contact your instructor.</p>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="privacy-actions">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-modern-primary">
                        <i class="bi bi-house-door"></i>
                        Back to Home
                    </a>
                    <a href="https://docs.github.com/en/copilot" target="_blank" class="btn btn-modern-outline">
                        <i class="bi bi-book"></i>
                        Copilot Documentation
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>