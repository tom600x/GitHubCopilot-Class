@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="text-center">
                <i class="bi bi-exclamation-triangle display-1 text-warning mb-4"></i>
                <h1 class="display-4 fw-bold text-danger">Oops!</h1>
                <h2 class="h4 mb-3">Something went wrong</h2>
                <p class="text-muted mb-4">
                    We're sorry, but an error has occurred while processing your request.
                </p>
                
                @if (Model.ShowRequestId)
                {
                    <div class="alert alert-secondary" role="alert">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </div>
                }
                
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house-door me-2"></i>Go Home
                    </a>
                    <button onclick="history.back()" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>